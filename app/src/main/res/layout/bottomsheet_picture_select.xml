<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/ic_camera"
            android:id="@+id/btmsht_picture_btn_camera"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/btmsht_picture_txt_camera"
            app:layout_constraintStart_toStartOf="@+id/btmsht_picture_txt_camera"
            android:scaleType="fitCenter"
            android:background="?selectableItemBackgroundBorderless" />

    <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/ic_galery"
            android:id="@+id/btmsht_picture_btn_galery"
            app:layout_constraintTop_toTopOf="@+id/btmsht_picture_btn_camera"
            app:layout_constraintEnd_toEndOf="@+id/btmsht_picture_txt_galery"
            app:layout_constraintStart_toStartOf="@+id/btmsht_picture_txt_galery"
            android:scaleType="fitCenter"
            android:background="?selectableItemBackgroundBorderless" />
    <TextView
            android:text="Kamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btmsht_picture_txt_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btmsht_picture_btn_camera"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="24dp"
            app:layout_constraintHorizontal_bias="0.25" />

    <TextView
            android:text="Galerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btmsht_picture_txt_galery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btmsht_picture_txt_camera"
            app:layout_constraintTop_toBottomOf="@+id/btmsht_picture_btn_camera"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>